<xs:schema version="1.0"
           xmlns:xs="http://www.w3.org/2001/XMLSchema"
           targetNamespace="http://byblo.org"
           xmlns="http://byblo.org"
           elementFormDefault="qualified">

    <xs:element name="configuration">
        <xs:complexType>
            <xs:all>
                <xs:element name="measure" minOccurs="1"
                            type="Identifier" />
                <xs:element name="charset" minOccurs="1"
                            type="xs:string" />
                <xs:element name="locale" minOccurs="1"
                            type="xs:language" />
                
                <xs:element name="measures" minOccurs="0" type="Measures" />
                <xs:element name="weightings" minOccurs="0" type="Weightings"/>
                <xs:element name="fileFormats" minOccurs="0" 
                            type="FileFormats"/>
            </xs:all>
        </xs:complexType>    
        
        <!-- Insure that certain element values as unique -->
        
        <xs:unique name="uniqueMeasureNames">
            <xs:selector xpath="./measures/measure"/>
            <xs:field xpath="name"/>
        </xs:unique>

        <xs:unique name="uniqueWeightingNames">
            <xs:selector xpath="./weightings/weighting"/>
            <xs:field xpath="name"/>
        </xs:unique>

        <xs:unique name="uniqueFileFormatNames">
            <xs:selector xpath="./fileFormats/fileFormat"/>
            <xs:field xpath="name"/>
        </xs:unique>
        
        <!-- Foreign key constrains -->
        
        <xs:key name="measureNameKey">
            <xs:selector xpath="measures/measure" />
            <xs:field xpath="name" />
        </xs:key>
        
        <xs:keyref name="measureNameReferences" refer="measureNameKey">
            <xs:selector xpath="."/>
            <xs:field xpath="measure"/>
        </xs:keyref>

    </xs:element>

    <xs:complexType name="Weightings">
        <xs:sequence>
            <xs:element name="weighting" minOccurs="0" maxOccurs="unbounded" 
                        type="Weighting" >                  
                <!-- Unique parameter names in weighting context -->
                <xs:unique name="uniqueWeightingParameterName">
                    <xs:selector xpath="./parameters/parameter"/>
                    <xs:field xpath="name"/>
                </xs:unique>
            </xs:element>
        </xs:sequence>      
    </xs:complexType>

    <xs:complexType name="Weighting">
        <xs:all>
            <xs:element name="name" minOccurs="1" type="Identifier"/>
            <xs:element name="class" minOccurs="1" type="xs:string"/>
            <xs:element name="description" minOccurs="0" type="xs:string"
                        default=""/>
            <xs:element name="parameters" minOccurs="0" type="Parameters"/>
            <xs:element name="aliases" minOccurs="0" type="Aliases"/>
        </xs:all>
    </xs:complexType>

      
    <xs:complexType name="Measures">
        <xs:sequence>
            <xs:element name="measure"  minOccurs="0" maxOccurs="unbounded" 
                        type="Measure" >  
                    
                <!-- Unique parameter names in measure context -->
                <xs:unique name="uniqueMeasureParameterName">
                    <xs:selector xpath="./parameters/parameter"/>
                    <xs:field xpath="name"/>
                </xs:unique>
            </xs:element>
        </xs:sequence>
    </xs:complexType>
    
    <xs:complexType name="Measure">
        <xs:all>
            <xs:element name="name" minOccurs="1" type="Identifier"/>
            <xs:element name="class" minOccurs="1" type="xs:string"/>
            <xs:element name="description" minOccurs="0" type="xs:string"
                        default=""/>
            <xs:element name="parameters" minOccurs="0" type="Parameters"/>
            <xs:element name="aliases" minOccurs="0" type="Aliases"/>
        </xs:all>
    </xs:complexType>                


    <xs:complexType name="Aliases">
        <xs:sequence>
            <xs:element name="alias"  minOccurs="0" maxOccurs="unbounded" 
                        type="Identifier" />
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="Parameters">
        <xs:sequence>
            <xs:element name="parameter"  minOccurs="0" 
                        maxOccurs="unbounded" type="Parameter" />  
        </xs:sequence>
    </xs:complexType>
    
    <xs:complexType name="Parameter">
        <xs:all>
            <xs:element name="name" minOccurs="1" type="Identifier"/>
            <xs:element name="type" minOccurs="0" default="string" >
                <xs:simpleType>
                    <xs:restriction base="xs:string">
                        <xs:enumeration value="int"/>
                        <xs:enumeration value="double"/>
                        <xs:enumeration value="boolean"/>
                        <xs:enumeration value="string"/>
                    </xs:restriction>
                </xs:simpleType>
            </xs:element>
            <xs:element name="defaultValue" minOccurs="0" type="xs:string"/>
            <xs:element name="description" minOccurs="0" type="xs:string" 
                        default=""/>  
            <xs:element name="required" minOccurs="0" 
                        type="xs:boolean" default="false" />
        </xs:all>
    </xs:complexType>                



    <xs:complexType name="FileFormats">
        <xs:sequence>
            <xs:element name="fileFormat"  minOccurs="0" 
                        maxOccurs="unbounded" type="FileFormat" >  
            </xs:element>
        </xs:sequence>
    </xs:complexType>
    
    <xs:complexType name="FileFormat">
        <xs:all>
            <xs:element name="name" minOccurs="1" type="Identifier"/>
            <xs:element name="compact" minOccurs="0" type="xs:boolean" 
                        default="false"/>
            <xs:element name="skipIndex" minOccurs="0">
                <xs:complexType>
                    <xs:sequence>
                        <xs:element name="column" minOccurs="0" 
                                    maxOccurs="unbounded" type="xs:boolean" />
                    </xs:sequence>  
                </xs:complexType>
            </xs:element>
        </xs:all>
    </xs:complexType> 
    
    <xs:simpleType name="Identifier">
        <xs:restriction base="xs:string">
            <xs:pattern value="[a-zA-Z0-9\-_]*"/>
            <xs:minLength value="1" />
            <xs:maxLength value="64" />
        </xs:restriction>
    </xs:simpleType>

    
    
</xs:schema>
