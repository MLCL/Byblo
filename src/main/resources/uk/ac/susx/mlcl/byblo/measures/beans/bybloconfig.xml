<byblo xmlns="http://byblo.org"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://byblo.org bybloconfig.xsd">
    
    <config c-class="uk.ac.susx.mlcl.byblo.config.beans.BybloConfig" >
    
        <charset>UTF-8</charset>
        
        <locale>en-GB</locale>
  
        <measure c-class="uk.ac.susx.mlcl.byblo.measures.impl.Weeds">
            <beta>0.77</beta>
            <gamma>0.123</gamma>  
        </measure>

        <measures>
              
            <measure c-class="uk.ac.susx.mlcl.byblo.config.beans.MeasureInfo">
                <name>cosine</name>
                <type>uk.ac.susx.mlcl.byblo.measures.impl.Cosine</type>
            </measure>
            
            <measure c-class="uk.ac.susx.mlcl.byblo.config.beans.MeasureInfo">
                <name>weeds</name>
                <type>uk.ac.susx.mlcl.byblo.measures.impl.Weeds</type>
                <description>Co-occurance retrieval framework</description>
            </measure>
              
              
            <measure c-class="uk.ac.susx.mlcl.byblo.config.beans.MeasureInfo">
                <name>lee</name>
                <type>uk.ac.susx.mlcl.byblo.measures.impl.LeeSkewDivergence</type>
                <description>Lee Alpha-Skew Divergence</description>
            </measure>
            
                  
            <measure c-class="uk.ac.susx.mlcl.byblo.config.beans.MeasureInfo">
                <name>overlap</name>
                <type>uk.ac.susx.mlcl.byblo.measures.impl.Overlap</type>
            </measure>
            
        </measures> 
          
    
    </config>
    
 
</byblo>